<p style="color: green"><%= notice %></p>

<%= render @paper %>

<p>
  <% @paper.authors.each do |author| %>
    <%= author.name + ", "%> 
    
  <% end %>
</p>

<div>
  <%= link_to "Edit this paper", edit_paper_path(@paper) %> |
  <%= link_to "Back to papers", papers_path %>
  <%= button_to "Delete this paper", @paper, method: :delete %>
</div>
